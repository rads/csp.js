  "repository": {
    "type": "git",
    "url": "https://github.com/rads/csp.js"
  },
  "author": "Radford Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rads/csp.js/issues"
  },
  "devDependencies": {
    "mocha": "1.14.0",
    "chai": "1.8.1",
    "sinon": "1.7.3",
    "sinon-chai": "2.4.0",
    "browserify": "2.35.1",
    "regenerator": "0.2.10",
    "regeneratorify": "git+https://github.com/rads/regeneratorify#remove-runtime",
    "regeneratorify-standalone": "0.0.1",
    "jshint": "~2.3.0",
    "uglify-js": "~2.4.3"
  }
