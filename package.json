{
  "name": "csp.js",
  "version": "0.1.0",
  "description": "CSP for vanilla JavaScript.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "./node_modules/.bin/jshint index.js lib",
    "test": "./node_modules/.bin/mocha --harmony-generators test/**/*_test.js"
